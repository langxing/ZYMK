<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180pt"
    android:background="@color/colorWhite"
    android:gravity="center"
    android:orientation="vertical"
    tools:ignore="HardcodedText,ContentDescription">

    <FrameLayout
        android:layout_width="96pt"
        android:layout_height="128pt"
        android:layout_marginTop="5pt">

        <ImageView
            android:id="@+id/img_book"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorGray_e" />

        <TextView
            android:id="@+id/tv_new"
            android:layout_width="35pt"
            android:layout_height="15pt"
            android:layout_gravity="end|top"
            android:background="@color/colorPrimaryAhp"
            android:gravity="center"
            android:paddingLeft="3pt"
            android:paddingRight="3pt"
            android:text="NEW"
            android:textColor="@color/colorWhite"
            android:textSize="10pt"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_select"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_select"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:padding="7pt"
                android:src="@mipmap/icon_mine_not_select" />

        </RelativeLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="96pt"
        android:layout_height="20pt"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="标题"
        android:textColor="@color/colorGray_5"
        android:textSize="13pt" />

    <TextView
        android:id="@+id/tv_some"
        android:layout_width="96pt"
        android:layout_height="15pt"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="标题"
        android:textColor="@color/colorGray_b"
        android:textSize="11pt" />

</LinearLayout>
