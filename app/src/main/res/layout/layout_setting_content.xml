<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="HardcodedText,ContentDescription">

    <View
        android:layout_width="match_parent"
        android:layout_height="15pt"
        android:background="@color/colorGray_g" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1pt"
        android:background="@color/colorLine" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35pt"
        android:background="@color/colorWhite"
        android:gravity="bottom"
        android:paddingStart="20pt"
        android:paddingLeft="20pt"
        android:paddingEnd="20pt"
        android:paddingBottom="5pt"
        android:text="基本设置："
        android:textColor="@color/colorBlue"
        android:textSize="13pt" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1pt"
        android:background="@color/colorLine" />

    <LinearLayout
        android:id="@+id/ll_m_1"
        android:layout_width="match_parent"
        android:layout_height="55pt"
        android:background="@drawable/click_bg1"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_marginStart="20pt"
            android:layout_marginLeft="20pt"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="清除缓存"
            android:textColor="@color/colorGray_5"
            android:textSize="14pt" />

        <TextView
            android:id="@+id/tv_m_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20pt"
            android:layout_marginRight="20pt"
            android:text="10MB"
            android:textColor="@color/colorGray_9"
            android:textSize="12pt" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1pt"
        android:layout_marginLeft="15pt"
        android:layout_marginRight="15pt"
        android:background="@color/colorLine" />

    <LinearLayout
        android:id="@+id/ll_m_2"
        android:layout_width="match_parent"
        android:layout_height="55pt"
        android:background="@drawable/click_bg1"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_marginStart="20pt"
            android:layout_marginLeft="20pt"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="漫画更新提醒"
            android:textColor="@color/colorGray_5"
            android:textSize="14pt" />

        <TextView
            android:id="@+id/tv_m_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20pt"
            android:layout_marginRight="20pt"
            android:text="是"
            android:textColor="@color/colorGray_9"
            android:textSize="12pt" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1pt"
        android:layout_marginLeft="15pt"
        android:layout_marginRight="15pt"
        android:background="@color/colorLine" />

    <LinearLayout
        android:id="@+id/ll_m_3"
        android:layout_width="match_parent"
        android:layout_height="55pt"
        android:background="@drawable/click_bg1"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_marginStart="20pt"
            android:layout_marginLeft="20pt"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="版本更新"
            android:textColor="@color/colorGray_5"
            android:textSize="14pt" />

        <TextView
            android:id="@+id/tv_m_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20pt"
            android:layout_marginRight="20pt"
            android:text="1.0"
            android:textColor="@color/colorGray_9"
            android:textSize="12pt" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1pt"
        android:background="@color/colorLine" />

    <View
        android:layout_width="match_parent"
        android:layout_height="15pt"
        android:background="@color/colorGray_g" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1pt"
        android:background="@color/colorLine" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35pt"
        android:background="@color/colorWhite"
        android:gravity="bottom"
        android:paddingStart="20pt"
        android:paddingLeft="20pt"
        android:paddingEnd="20pt"
        android:paddingBottom="5pt"
        android:text="项目相关："
        android:textColor="@color/colorBlue"
        android:textSize="13pt" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1pt"
        android:background="@color/colorLine" />

    <LinearLayout
        android:id="@+id/ll_p_1"
        android:layout_width="match_parent"
        android:layout_height="55pt"
        android:background="@drawable/click_bg1"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_marginStart="20pt"
            android:layout_marginLeft="20pt"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="项目地址"
            android:textColor="@color/colorGray_5"
            android:textSize="14pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20pt"
            android:layout_marginRight="20pt"
            android:text="@string/mine_github2"
            android:textColor="@color/colorGray_9"
            android:textSize="10pt" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1pt"
        android:layout_marginLeft="15pt"
        android:layout_marginRight="15pt"
        android:background="@color/colorLine" />

    <LinearLayout
        android:id="@+id/ll_p_2"
        android:layout_width="match_parent"
        android:layout_height="55pt"
        android:background="@drawable/click_bg1"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_marginStart="20pt"
            android:layout_marginLeft="20pt"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="关于作者"
            android:textColor="@color/colorGray_5"
            android:textSize="14pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20pt"
            android:layout_marginRight="20pt"
            android:text="@string/wzmyyj"
            android:textColor="@color/colorGray_9"
            android:textSize="12pt" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1pt"
        android:layout_marginLeft="15pt"
        android:layout_marginRight="15pt"
        android:background="@color/colorLine" />

    <LinearLayout
        android:id="@+id/ll_p_3"
        android:layout_width="match_parent"
        android:layout_height="55pt"
        android:background="@drawable/click_bg1"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_marginStart="20pt"
            android:layout_marginLeft="20pt"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="问题反馈"
            android:textColor="@color/colorGray_5"
            android:textSize="14pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20pt"
            android:layout_marginRight="20pt"
            android:text="@string/call_author"
            android:textColor="@color/colorGray_9"
            android:textSize="12pt" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1pt"
        android:background="@color/colorLine" />

    <View
        android:layout_width="match_parent"
        android:layout_height="15pt"
        android:background="@color/colorGray_g" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1pt"
        android:background="@color/colorLine" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35pt"
        android:background="@color/colorWhite"
        android:gravity="bottom"
        android:paddingStart="20pt"
        android:paddingLeft="20pt"
        android:paddingEnd="20pt"
        android:paddingBottom="5pt"
        android:text="免责声明："
        android:textColor="@color/colorBlue"
        android:textSize="13pt" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1pt"
        android:background="@color/colorLine" />

    <TextView
        android:id="@+id/tv_i_say"
        android:layout_width="match_parent"
        android:layout_height="150pt"
        android:background="@color/colorWhite"
        android:padding="15pt"
        android:text="@string/i_say"
        android:textColor="@color/colorGray_b"
        android:textSize="13pt" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100pt"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:text="--end--"
        android:textColor="@color/colorGray_b"
        android:textSize="13pt" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1pt"
        android:background="@color/colorLine" />

    <View
        android:layout_width="match_parent"
        android:layout_height="15pt"
        android:background="@color/colorGray_g" />

</LinearLayout>
