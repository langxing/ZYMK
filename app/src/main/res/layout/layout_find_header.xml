<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:ignore="HardcodedText,ContentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35pt"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_favor_num"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="15pt"
            android:paddingRight="15pt"
            android:text="共0本"
            android:textColor="@color/colorGray_9"
            android:textSize="14pt" />

        <ImageView
            android:id="@+id/img_favor_gg"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginEnd="5pt"
            android:layout_marginRight="5pt"
            android:padding="6pt"
            android:src="@mipmap/ico_9gg_unavailable" />

        <ImageView
            android:id="@+id/img_favor_pl"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginEnd="15pt"
            android:layout_marginRight="15pt"
            android:padding="6pt"
            android:src="@mipmap/ico_pl_unavailable" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1pt"
        android:background="@color/colorLine" />

</LinearLayout>
