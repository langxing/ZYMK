<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="HardcodedText,ContentDescription">

    <View
        android:layout_width="match_parent"
        android:layout_height="15pt"
        android:background="@color/colorGray_g" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1pt"
        android:background="@color/colorLine" />

    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_width="match_parent"
        android:layout_height="95pt"
        android:background="@drawable/click_bg1"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">

        <top.wzmyyj.wzm_sdk.widget.CircleImageView
            android:id="@+id/img_me"
            android:layout_width="65pt"
            android:layout_height="65pt"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20pt"
            android:layout_marginRight="20pt"
            android:src="@mipmap/ic_avatar"
            app:border_color="@color/colorLine"
            app:border_width="0.1pt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35pt"
                android:layout_marginTop="10pt"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100pt"
                    android:layout_height="wrap_content"
                    android:text="@string/wzm"
                    android:textColor="@color/colorGray_5"
                    android:textSize="16pt" />

                <Button
                    android:id="@+id/bt_star"
                    android:layout_width="50pt"
                    android:layout_height="20pt"
                    android:layout_marginStart="10pt"
                    android:layout_marginLeft="10pt"
                    android:background="@drawable/bg_star"
                    android:text="star"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12pt" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2pt"
                android:text="@string/mine_github"
                android:textColor="@color/colorGray_b"
                android:textSize="12pt" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1pt"
        android:background="@color/colorLine" />

    <View
        android:layout_width="match_parent"
        android:layout_height="15pt"
        android:background="@color/colorGray_g" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1pt"
        android:background="@color/colorLine" />

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="50pt"
        android:background="@drawable/click_bg1"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15pt">

        <ImageView
            android:layout_width="20pt"
            android:layout_height="20pt"
            android:src="@mipmap/ic_find_1" />

        <TextView
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_marginStart="15pt"
            android:layout_marginLeft="15pt"
            android:layout_weight="1"
            android:text="官方网站"
            android:textColor="@color/colorGray_5"
            android:textSize="14pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="16pt"
            android:layout_marginEnd="10pt"
            android:layout_marginRight="10pt"
            android:text="m.zymk.cn"
            android:textColor="@color/colorGray_b"
            android:textSize="12pt" />

        <ImageView
            android:layout_width="13pt"
            android:layout_height="13pt"
            android:src="@mipmap/ic_right" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1pt"
        android:background="@color/colorLine" />

    <View
        android:layout_width="match_parent"
        android:layout_height="15pt"
        android:background="@color/colorGray_g" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1pt"
        android:background="@color/colorLine" />

    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="match_parent"
        android:layout_height="50pt"
        android:background="@drawable/click_bg1"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15pt">

        <ImageView
            android:layout_width="20pt"
            android:layout_height="20pt"
            android:src="@mipmap/ic_find_2" />


        <TextView
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_marginStart="15pt"
            android:layout_marginLeft="15pt"
            android:layout_weight="1"
            android:text="活动中心"
            android:textColor="@color/colorGray_5"
            android:textSize="14pt" />

        <ImageView
            android:layout_width="60pt"
            android:layout_height="16pt"
            android:layout_marginEnd="10pt"
            android:layout_marginRight="10pt"
            android:src="@mipmap/pic_find_ljcy" />

        <ImageView
            android:layout_width="13pt"
            android:layout_height="13pt"
            android:src="@mipmap/ic_right" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1pt"
        android:background="@color/colorLine" />

    <View
        android:layout_width="match_parent"
        android:layout_height="15pt"
        android:background="@color/colorGray_g" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1pt"
        android:background="@color/colorLine" />

    <LinearLayout
        android:id="@+id/ll_3"
        android:layout_width="match_parent"
        android:layout_height="50pt"
        android:background="@drawable/click_bg1"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15pt">

        <ImageView
            android:layout_width="20pt"
            android:layout_height="20pt"
            android:src="@mipmap/ic_find_3" />

        <TextView
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_marginStart="15pt"
            android:layout_marginLeft="15pt"
            android:layout_weight="1"
            android:text="漫客商城"
            android:textColor="@color/colorGray_5"
            android:textSize="14pt" />

        <ImageView
            android:layout_width="13pt"
            android:layout_height="13pt"
            android:src="@mipmap/ic_right" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1pt"
        android:background="@color/colorLine" />

    <View
        android:layout_width="match_parent"
        android:layout_height="15pt"
        android:background="@color/colorGray_g" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1pt"
        android:background="@color/colorLine" />

    <LinearLayout
        android:id="@+id/ll_4"
        android:layout_width="match_parent"
        android:layout_height="50pt"
        android:background="@drawable/click_bg1"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15pt">

        <ImageView
            android:layout_width="20pt"
            android:layout_height="20pt"
            android:src="@mipmap/ic_find_4" />

        <TextView
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_marginStart="15pt"
            android:layout_marginLeft="15pt"
            android:layout_weight="1"
            android:text="应用设置"
            android:textColor="@color/colorGray_5"
            android:textSize="14pt" />

        <ImageView
            android:layout_width="13pt"
            android:layout_height="13pt"
            android:src="@mipmap/ic_right" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1pt"
        android:background="@color/colorLine" />

    <View
        android:layout_width="match_parent"
        android:layout_height="400pt"
        android:background="@color/colorGray_g" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40pt"
        android:background="@color/colorGray_g"
        android:gravity="center"
        android:text="〣( ºΔº )〣,被发现了!"
        android:textColor="@color/colorGray_b"
        android:textSize="11pt" />

</LinearLayout>
