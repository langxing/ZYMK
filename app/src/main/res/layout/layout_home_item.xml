<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:descendantFocusability="blocksDescendants"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:ignore="HardcodedText,ContentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37pt"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10pt"
        android:paddingRight="10pt">

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginStart="5pt"
            android:layout_marginLeft="5pt"
            android:padding="2pt" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10pt"
            android:layout_marginLeft="10pt"
            android:layout_marginTop="5pt"
            android:textColor="@color/colorGray_5"
            android:textSize="15pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_summary"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10pt"
            android:layout_marginTop="5pt"
            android:layout_marginRight="10pt"
            android:layout_weight="1"
            android:textColor="@color/colorGray_9"
            android:textSize="13pt" />

        <Button
            android:id="@+id/bt_more"
            android:layout_width="40pt"
            android:layout_height="match_parent"
            android:background="@drawable/click_bg"
            android:gravity="center"
            android:paddingTop="5pt"
            android:text="更多"
            android:textColor="@color/colorGray_b"
            android:textSize="12pt" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_item"
        android:layout_width="match_parent"
        android:layout_height="180pt"
        android:paddingLeft="10pt"
        android:paddingRight="10pt" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1pt"
        android:background="@color/colorLine" />

    <View
        android:layout_width="match_parent"
        android:layout_height="15pt"
        android:background="@color/colorGray_g" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1pt"
        android:background="@color/colorLine" />

</LinearLayout>
