<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="HardcodedText,ContentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45pt"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:layout_marginLeft="5pt"
            android:layout_marginRight="5pt"
            android:padding="11pt"
            android:src="@mipmap/svg_gray_icon_recent" />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="历史"
            android:textColor="@color/colorGray_7"
            android:textSize="13pt" />

        <ImageView
            android:id="@+id/img_fork"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:layout_marginLeft="5pt"
            android:layout_marginRight="5pt"
            android:background="@drawable/click_bg"
            android:padding="13pt"
            android:src="@mipmap/svg_gray_icon_fork" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1pt"
        android:layout_marginLeft="10pt"
        android:layout_marginRight="10pt"
        android:background="@color/colorLine" />

</LinearLayout>
