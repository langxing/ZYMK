<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText,ContentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35pt"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0pt"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_favor_num"
                android:layout_width="0pt"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="15pt"
                android:paddingRight="15pt"
                android:text="共0本"
                android:textColor="@color/colorGray_9"
                android:textSize="14pt"
                tools:ignore="NestedWeights" />

            <ImageView
                android:id="@+id/img_favor_gg"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginEnd="5pt"
                android:layout_marginRight="5pt"
                android:padding="6pt"
                android:src="@mipmap/ico_9gg_unavailable" />

            <ImageView
                android:id="@+id/img_favor_pl"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginEnd="15pt"
                android:layout_marginRight="15pt"
                android:padding="6pt"
                android:src="@mipmap/ico_pl_unavailable" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1pt"
            android:background="@color/colorLine" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1pt"
            android:background="@color/colorLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40pt"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_select_all"
                android:layout_width="0pt"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/click_bg"
                android:gravity="center"
                android:text="全选"
                android:textColor="@color/colorGray_9"
                android:textSize="13pt" />

            <View
                android:layout_width="0.1pt"
                android:layout_height="25pt"
                android:background="@color/colorLine" />

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="0pt"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/click_bg"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/colorGray_b"
                android:textSize="13pt" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
