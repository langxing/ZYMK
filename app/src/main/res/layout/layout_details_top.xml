<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="HardcodedText,ContentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/v_top_0"
            android:layout_width="match_parent"
            android:layout_height="0pt" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="45pt">

            <ImageView
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_gravity="start"
                android:layout_marginLeft="10pt"
                android:layout_marginRight="10pt"
                android:padding="12pt"
                android:src="@mipmap/svg_white_nav_bar_back" />

            <ImageView
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_gravity="end|center_vertical"
                android:layout_marginLeft="10pt"
                android:layout_marginRight="10pt"
                android:padding="12pt"
                android:src="@mipmap/svg_white_nav_bar_love" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <View
            android:id="@+id/v_top_1"
            android:layout_width="match_parent"
            android:layout_height="0pt" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="45pt">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="45pt"
                android:gravity="center"
                android:text="XX"
                android:textColor="@color/colorPrimary"
                android:textSize="16pt" />

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_gravity="start"
                android:layout_marginLeft="10pt"
                android:layout_marginRight="10pt"
                android:background="@drawable/click_bg"
                android:padding="12pt"
                android:src="@mipmap/svg_red_nav_bar_back" />

            <ImageView
                android:id="@+id/img_love"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_gravity="end|center_vertical"
                android:layout_marginLeft="10pt"
                android:layout_marginRight="10pt"
                android:background="@drawable/click_bg"
                android:padding="12pt"
                android:src="@mipmap/svg_red_nav_bar_love" />

        </FrameLayout>

    </LinearLayout>

</FrameLayout>
