<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140pt"
    android:orientation="vertical"
    tools:ignore="HardcodedText,ContentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="139pt"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:padding="15pt">

        <FrameLayout
            android:layout_width="108pt"
            android:layout_height="108pt"
            android:background="@color/colorGray_e">

            <ImageView
                android:id="@+id/img_book"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10pt"
            android:layout_marginLeft="10pt"
            android:padding="5pt">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="20pt"
                android:layout_gravity="top"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="标题"
                android:textColor="@color/colorGray_5"
                android:textSize="15pt" />

            <com.dl7.tag.TagLayout
                android:id="@+id/tl_tag"
                android:layout_width="match_parent"
                android:layout_height="40pt"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="40pt"
                android:layout_marginRight="40pt"
                app:tag_layout_border_width="0pt"
                app:tag_layout_random_color="true"
                app:tag_layout_shape="arc"
                app:tag_view_border_color="@color/colorClarity"
                app:tag_view_text_color="@color/colorWhite"
                app:tag_view_text_size="8pt" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="32pt"
                android:layout_height="24pt"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="5pt"
                android:layout_marginRight="5pt"
                android:gravity="center"
                android:text="00"
                android:textColor="@color/colorGray_5"
                android:textSize="15pt" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20pt"
                android:layout_gravity="bottom"
                android:layout_marginTop="5pt"
                android:layout_marginBottom="10pt"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_what"
                    android:layout_width="wrap_content"
                    android:layout_height="20pt"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="XX："
                    android:textColor="@color/colorGray_9"
                    android:textSize="13pt" />

                <TextView
                    android:id="@+id/tv_ift"
                    android:layout_width="match_parent"
                    android:layout_height="20pt"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="XX"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13pt" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1pt"
        android:layout_marginLeft="15pt"
        android:layout_marginRight="15pt"
        android:background="@color/colorLine" />

</LinearLayout>
